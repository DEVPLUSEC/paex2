<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="paex2.paginas.registro"
             Title="Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre" HorizontalOptions="Center"/>
            <Entry x:Name="txtNombre" Placeholder="Nombre"/>
            <Label Text="Usuario" HorizontalOptions="Center"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Label Text="Contraseña" HorizontalOptions="Center"/>
            <Entry x:Name="txtPassword" Placeholder="*****" IsPassword="True"/>

            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>